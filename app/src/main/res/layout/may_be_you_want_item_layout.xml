<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">
    <ImageView
        android:id="@+id/img_may_be_you_want_pic"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="left"
        android:src="@mipmap/yu_jia_zai"/>

        <TextView
            android:id="@+id/text_may_be_you_want_name"
            android:layout_width="120dp"
            style="@style/good_name_base_style"
            android:lines="2"
            />

    <TextView
        android:id="@+id/text_may_be_you_want_shop_price"
        style="@style/good_price_base_style"/>

</LinearLayout>