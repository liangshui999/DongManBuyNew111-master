<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mo_kuai_backgroud">

    <!--头部-->
    <RelativeLayout
        style="@style/dao_hang_relative_layout_style">
        <ImageView
            android:id="@+id/img_dao_hang_data_set"
            style="@style/dao_hang_img_style"/>
        <TextView
            android:text="@string/data_set"
            style="@style/dao_hang_text_style"
            />
    </RelativeLayout>

    <!--头像-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/white_my">
        <TextView
            android:text="@string/tou_xiang"
            style="@style/data_set_title_style"/>
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/img_tou_xiang_data_set"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/mo_kuai_backgroud"
            android:layout_margin="5dp"/>
    </RelativeLayout>


    <!--用户名-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/white_my"
        android:layout_marginTop="2dp">
        <TextView
            android:text="@string/yong_hu_ming"
            style="@style/data_set_title_style"/>
        <TextView
            android:id="@+id/text_name_data_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="liangshui"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>


   <!-- 性别-->
    <RelativeLayout
        android:id="@+id/re_layout_sex_data_set"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="2dp"
        android:background="@color/white_my">
        <TextView
            android:text="@string/xing_bie"
            style="@style/data_set_title_style"/>
        <ImageView
            android:id="@+id/sex"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/right"
            android:layout_alignParentRight="true"/>
        <TextView
            android:id="@+id/text_sex_data_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="男"
            android:layout_toLeftOf="@id/sex"
            android:layout_centerVertical="true"/>
    </RelativeLayout>


    <!--手机-->
    <RelativeLayout
        android:id="@+id/re_layout_phone_data_set"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="2dp"
        android:background="@color/white_my">
        <TextView
            android:text="@string/shou_ji"
            style="@style/data_set_title_style"/>
        <ImageView
            android:id="@+id/shouji"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/right"
            android:layout_alignParentRight="true"/>
        <TextView
            android:id="@+id/text_phone_data_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未绑定"
            android:layout_toLeftOf="@id/shouji"
            android:layout_centerVertical="true"/>
    </RelativeLayout>



    <!--邮箱-->
    <RelativeLayout
        android:id="@+id/re_layout_email_data_set"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="2dp"
        android:background="@color/white_my">
        <TextView
            android:text="@string/you_xiang"
            style="@style/data_set_title_style"/>
        <ImageView
            android:id="@+id/email"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/right"
            android:layout_alignParentRight="true"/>
        <TextView
            android:id="@+id/text_email_data_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25430@qq.com"
            android:layout_toLeftOf="@id/email"
            android:layout_centerVertical="true"/>
    </RelativeLayout>



   <!-- 修改密码-->
    <RelativeLayout
        android:id="@+id/re_layout_change_password_data_set"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="2dp"
        android:background="@color/white_my">
        <TextView
            android:text="@string/change_password"
            style="@style/data_set_title_style"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/right"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>



    <!--收货地址-->
    <RelativeLayout
        android:id="@+id/re_layout_ship_address_data_set"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="2dp"
        android:background="@color/white_my">
        <TextView
            android:text="@string/ship_address"
            style="@style/data_set_title_style"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/right"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>


    <!--退出-->
    <Button
        android:id="@+id/btn_exit_data_set"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/exit"
        android:background="@drawable/red_backgroud_yuan_jiao_button"
        android:textColor="@color/white_my"/>











</LinearLayout>