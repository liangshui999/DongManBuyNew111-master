<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:id="@+id/edit_change_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/please_input_shou_ji_hao"
        android:padding="10dp"
        android:layout_marginTop="5dp"/>
    <Button
        android:id="@+id/btn_confirm_change_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/bottom_lable_color"
        android:textColor="@color/white_my"
        android:text="@string/confirm_change"/>

</LinearLayout>