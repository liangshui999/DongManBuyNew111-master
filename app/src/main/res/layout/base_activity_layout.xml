    android:layout_height="match_parent">

    <!--头部-->
    <RelativeLayout
        style="@style/dao_hang_relative_layout_style">
        <ImageView
            android:id="@+id/img_dao_hang_base_acitivity"
            style="@style/dao_hang_img_style"/>
        <TextView
            android:id="@+id/text_dao_hang_base_activity"
            android:text=""
            style="@style/dao_hang_text_style"
            />
    </RelativeLayout>

    <!--内容区域-->
    <LinearLayout
        android:id="@+id/ll_content_base_activity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    </LinearLayout>

</LinearLayout>