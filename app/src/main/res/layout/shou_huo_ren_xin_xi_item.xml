<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">
                <TextView
                    android:id="@+id/text_shou_huo_ren_name_list_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="朱熹"
                    android:textColor="@color/myblack"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/text_shou_huo_ren_phone_list_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="15021478562"
                    android:textColor="@color/myblack"
                    android:textSize="16sp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/text_shou_huo_ren_address_list_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="湖北省武汉市武昌区晒湖校区25号"/>

        </LinearLayout>

        <CheckBox
            android:id="@+id/check_box_shou_huo_ren_xin_xi_list_item"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:button="@null"
            android:background="@drawable/shouhuoitemcheckbox"
            android:checked="true"
            android:layout_gravity="center_vertical"
            android:clickable="false"
            android:focusable="false"
            />
    </LinearLayout>

</LinearLayout>