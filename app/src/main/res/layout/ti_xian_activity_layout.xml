<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--头部-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_my"
        android:layout_marginBottom="2dp"
        android:paddingTop="@dimen/head_padding"
        android:paddingBottom="@dimen/head_padding">
        <ImageView
            android:id="@+id/img_dao_hang_ti_xian"
            android:layout_width="@dimen/dao_hang_img_base_font"
            android:layout_height="@dimen/dao_hang_img_base_font"
            android:layout_centerVertical="true"
            android:src="@mipmap/leftdaohang"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ti_xian"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:padding="5dp"
            android:textSize="@dimen/dao_hang_base_font"
            />
    </RelativeLayout>

    <!--充值金额-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/white_my">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ti_xian_jin_e"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/edit_ti_xian_jin_e_ti_xian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="本次最大提现金额888"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>



    <!--会员备注-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="2dp"
        android:background="@color/white_my"
        android:text="@string/hui_yuan_bei_zhu"/>

    <EditText
        android:id="@+id/edit_bei_zhu_ti_xian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_my"
        android:hint="@string/xuan_tian"
        android:minLines="2"
        android:maxLength="50"
        android:padding="10dp"
        android:textSize="14sp"/>



    <!--充值方式-->
    <RelativeLayout
        android:id="@+id/re_layout_ti_xian_fang_shi_ti_xian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="2dp"
        android:background="@color/white_my"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ti_xian_fang_shi"/>
        <ImageView
            android:id="@+id/chong_zhi"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/right"
            android:layout_alignParentRight="true"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/chong_zhi"
            android:orientation="horizontal"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/text_ti_xian_fang_shi_bank_name_ti_xian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/bottom_lable_color"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:id="@+id/text_ti_xian_fang_shi_ka_hao_ti_xian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/bottom_lable_color"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>


    </RelativeLayout>


    <!--提交申请-->
    <Button
        android:id="@+id/btn_ti_jiao_shen_qing_ti_xian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/red_backgroud_yuan_jiao_button"
        android:text="@string/ti_jiao_shen_qing"
        android:textColor="@color/white_my"/>







</LinearLayout>