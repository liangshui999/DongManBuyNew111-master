<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">


    <!--店铺名称-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <ImageView
            android:id="@+id/img_shop_logo_guan_zhu_list"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/shop_logo_backgroud"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_toRightOf="@id/img_shop_logo_guan_zhu_list"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/text_shop_name_guan_zhu_list"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="动漫社书屋"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/text_guan_zhu_ren_shu_guan_zhu_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已经有0人关注"/>
        </LinearLayout>

        <TextView
            android:id="@+id/text_qu_xiao_guan_zhu_guan_zhu_list"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/qu_xiao_guan_zhu"
            android:textColor="@color/bottom_lable_color"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/guan_zhu_background"/>
    </RelativeLayout>

    <!--评分-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品"
                android:layout_marginLeft="5dp"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/text_product_score_guan_zhu_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5分"
                android:textColor="@color/bottom_lable_color"
                android:layout_marginLeft="5dp"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/text_product_ping_ji_guan_zhu_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="高"
                android:textColor="@color/white_my"
                android:background="@drawable/product_ping_fen_background"
                android:layout_marginLeft="5dp"
                android:textSize="12sp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务"
                android:layout_marginLeft="5dp"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/text_fu_wu_score_guan_zhu_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5分"
                android:textColor="@color/fu_wu_ping_fen"
                android:layout_marginLeft="5dp"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/text_fu_wu_ping_ji_guan_zhu_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="高"
                android:textColor="@color/white_my"
                android:background="@drawable/fu_wu_ping_fen_background"
                android:layout_marginLeft="5dp"
                android:textSize="12sp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时效"
                android:layout_marginLeft="5dp"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/text_shi_xiao_score_guan_zhu_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5分"
                android:textColor="@color/shi_xiao_ping_fen"
                android:layout_marginLeft="5dp"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/text_shi_xiao_ping_ji_guan_zhu_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="高"
                android:textColor="@color/white_my"
                android:background="@drawable/shi_xiao_ping_fen_background"
                android:layout_marginLeft="5dp"
                android:textSize="12sp"/>
        </LinearLayout>

    </LinearLayout>



</LinearLayout>