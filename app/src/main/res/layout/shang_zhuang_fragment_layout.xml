<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp">

    <com.example.asus_cp.dongmanbuy.customview.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--卫衣的布局-->
            <LinearLayout
                style="@style/category_ll_style">
                <TextView
                    android:id="@+id/text_wei_yi"
                    android:text="@string/shang_zhuang"
                    style="@style/category_textview_style"
                    />
                <com.example.asus_cp.dongmanbuy.customview.MyGridViewA
                    android:id="@+id/grid_view_wei_yi"
                   style="@style/category_gridview_style"
                    >
                </com.example.asus_cp.dongmanbuy.customview.MyGridViewA>
            </LinearLayout>


            <!--针织衫的布局-->
            <LinearLayout
                style="@style/category_ll_style">
                <TextView
                    android:id="@+id/text_zhen_zhi_shan"
                    android:text="@string/zhen_zhi_shan"
                    style="@style/category_textview_style"
                    />
                <com.example.asus_cp.dongmanbuy.customview.MyGridViewA
                    android:id="@+id/grid_view_zhen_zhi_shan"
                    style="@style/category_gridview_style"
                    >
                </com.example.asus_cp.dongmanbuy.customview.MyGridViewA>
            </LinearLayout>

            <!--外套的布局-->
            <LinearLayout
                style="@style/category_ll_style">
                <TextView
                    android:id="@+id/text_wai_tao"
                    android:text="@string/wai_tao"
                    style="@style/category_textview_style"
                    />
                <com.example.asus_cp.dongmanbuy.customview.MyGridViewA
                    android:id="@+id/grid_view_wai_tao"
                    style="@style/category_gridview_style"
                    >
                </com.example.asus_cp.dongmanbuy.customview.MyGridViewA>
            </LinearLayout>

            <!--T恤的布局-->
            <LinearLayout
                style="@style/category_ll_style">
                <TextView
                    android:id="@+id/text_t_xue"
                    android:text="@string/t_xue"
                    style="@style/category_textview_style"/>
                <com.example.asus_cp.dongmanbuy.customview.MyGridViewA
                    android:id="@+id/grid_view_t_xue"
                    style="@style/category_gridview_style"
                    >
                </com.example.asus_cp.dongmanbuy.customview.MyGridViewA>
            </LinearLayout>

        </LinearLayout>
    </com.example.asus_cp.dongmanbuy.customview.MyScrollView>


</LinearLayout>