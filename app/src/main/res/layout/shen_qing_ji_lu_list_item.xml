<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/text_jiao_yi_fang_shi_shen_qing_ji_lu_list_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ti_xian"
                android:textColor="@color/myblack"
                android:paddingBottom="5dp"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/text_time_shen_qing_ji_lu_list_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2011-11-11"/>
        </LinearLayout>


        <ImageView
            android:id="@+id/right"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toLeftOf="@id/right"
            android:layout_marginRight="5dp">

            <TextView
                android:id="@+id/text_jin_e_shen_qing_ji_lu_list_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.00"
                android:layout_gravity="center"
                android:textColor="@color/myblack"
                android:textSize="16sp"
                android:paddingBottom="5dp"/>

            <TextView
                android:id="@+id/text_status_shen_qing_ji_lu_list_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未确认"
                android:textColor="@color/bottom_lable_color"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>