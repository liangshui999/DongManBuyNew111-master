<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!--头部-->
    <RelativeLayout
        android:id="@+id/re_layout_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/bottom_lable_color"
        >
        <ImageView
            android:id="@+id/img_dao_hang_base_acitivity"
            style="@style/dao_hang_img_style"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/text_product_product"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:text="@string/product"
                    android:textColor="@color/white_my"
                    android:padding="5dp"
                    android:textSize="16sp"
                    android:clickable="true"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    />
                <ImageView
                    android:id="@+id/img_product_product"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/white_my"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp">
                <TextView
                    android:id="@+id/text_detail_product"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:text="@string/detail"
                    android:textColor="@color/white_my"
                    android:padding="5dp"
                    android:textSize="16sp"
                    android:clickable="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />
                <ImageView
                    android:id="@+id/img_detail_product"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/white_my"
                    android:layout_gravity="center"
                    android:visibility="gone"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/text_comment_product"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:text="@string/comment"
                    android:textColor="@color/white_my"
                    android:padding="5dp"
                    android:textSize="16sp"
                    android:clickable="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />
                <ImageView
                    android:id="@+id/img_comment_product"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/white_my"
                    android:layout_gravity="center"
                    android:visibility="gone"/>
            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>


    <FrameLayout
        android:id="@+id/frame_content_product"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

</LinearLayout>