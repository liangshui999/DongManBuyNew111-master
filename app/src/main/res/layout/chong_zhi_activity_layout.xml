<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">

    <!--充值金额-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/white_my">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chong_zhi_jin_e"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/edit_chong_zhi_jin_e_chong_zhi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/please_input_chong_zhi_jin_e"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>



    <!--会员备注-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="2dp"
        android:background="@color/white_my"
        android:text="@string/hui_yuan_bei_zhu"/>

    <EditText
        android:id="@+id/edit_bei_zhu_chong_zhi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_my"
        android:hint="@string/xuan_tian"
        android:padding="10dp"
        android:minLines="2"
        android:maxLength="50"
        android:textSize="14sp"/>



    <!--充值方式-->
    <RelativeLayout
        android:id="@+id/re_layout_chong_zhi_fang_shi_chong_zhi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="2dp"
        android:background="@color/white_my"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chong_zhi_fang_shi"/>
        <ImageView
            android:id="@+id/chong_zhi"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/right"
            android:layout_alignParentRight="true"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/chong_zhi"
            android:orientation="horizontal"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/text_zhi_fu_fang_shi_chong_zhi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付宝"
                android:layout_gravity="center"
                android:textColor="@color/bottom_lable_color"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手续费"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                />
            <TextView
                android:id="@+id/text_shou_xu_fei_chong_zhi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:layout_gravity="center"
                android:textColor="@color/bottom_lable_color"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>


    </RelativeLayout>


    <!--提交申请-->
    <Button
        android:id="@+id/btn_ti_jiao_shen_qing_chong_zhi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/red_backgroud_yuan_jiao_button"
        android:text="@string/ti_jiao_shen_qing"
        android:textColor="@color/white_my"/>







</LinearLayout>