<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="230dp"
    android:background="@color/white_my"
    >
    <ImageView
        android:id="@+id/img_cai_ni_xi_huan"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/text_cai_ni_xi_huan_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:maxLines="1"
        android:layout_marginLeft="20dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        >
        <TextView
            android:id="@+id/text_cai_ni_xi_huan_shop_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:textSize="14sp"
            android:text="99.00"
            android:textColor="@color/bottom_lable_color"
            android:layout_marginLeft="20dp"/>
        <ImageView
            android:id="@+id/img_shopping_car"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/shoppingcar_hong"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

</LinearLayout>