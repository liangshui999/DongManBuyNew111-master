<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_my"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/text_phone_register"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/phone_register"
                android:textSize="@dimen/register_font_size"
                android:layout_gravity="center"/>
            <ImageView
                android:id="@+id/img_phone_register_status"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:src="@mipmap/register_selected"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/text_email_register"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email_register"
                android:textSize="@dimen/register_font_size"
                android:layout_gravity="center"/>
            <ImageView
                android:id="@+id/img_email_register_status"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:src="@mipmap/register_not_selected"/>

        </LinearLayout>
    </LinearLayout>


    <!--碎片所在的布局-->
    <FrameLayout
        android:id="@+id/frame_register_buf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </FrameLayout>


    <!--已注册直接登录-->
    <TextView
        android:id="@+id/text_zhi_jie_login"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:text="@string/have_registered_login"
        android:layout_gravity="right"/>


</LinearLayout>