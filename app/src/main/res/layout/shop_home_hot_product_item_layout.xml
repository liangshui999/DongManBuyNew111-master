<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="220dp"
    android:background="@color/white_my">
    <ImageView
        android:id="@+id/img_shop_home_hot_product_pic"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/text_shop_home_hot_product_name"
        android:lines="2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:id="@+id/text_shop_home_hot_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="5dp"
        android:textSize="14sp"
        android:textColor="@color/bottom_lable_color"
        android:layout_marginLeft="10dp"/>

</LinearLayout>