<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ding_dan"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/text_ding_dan_hao_account_detail_list_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20000100003658995"
                android:maxWidth="200dp"
                android:textColor="@color/myblack"
                android:textSize="14sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/text_money_account_detail_list_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-100.00"
            android:layout_alignParentRight="true"
            android:textSize="14sp"/>
    </RelativeLayout>


    <TextView
        android:id="@+id/text_time_account_detail_list_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2015-1-25"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:textSize="12sp"/>


</LinearLayout>