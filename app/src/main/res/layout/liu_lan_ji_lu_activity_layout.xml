<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_my">

    <!--标题栏-->
    <RelativeLayout
        style="@style/dao_hang_relative_layout_style">
        <ImageView
            android:id="@+id/img_dao_hang_liu_lan_ji_lu"
            style="@style/dao_hang_img_style"/>
        <TextView
            android:text="@string/liu_lan_li_shi"
            style="@style/dao_hang_text_style"/>
        <LinearLayout
            android:id="@+id/ll_qing_kong_liu_lan_ji_lu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/delete"
                android:visibility="gone"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/qing_kong"
                android:layout_gravity="center"
                android:textColor="@color/white_my"/>
        </LinearLayout>
    </RelativeLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/mo_kuai_backgroud"/>
    <ListView
        android:id="@+id/list_liu_lan_ji_lu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    </ListView>

</LinearLayout>