<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_my">
    <ImageView
        android:id="@+id/img_shop_product_pic_grid"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/text_shop_product_name_grid"
        android:layout_width="wrap_content"
        android:lines="2"
        style="@style/good_name_style_left_five"
        />

        <TextView
            android:id="@+id/text_shop_product_price_grid"
            style="@style/good_price_style_left_five"/>



</LinearLayout>