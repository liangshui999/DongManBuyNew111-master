<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical" android:layout_width="match_parent"
android:layout_height="150dp"
android:layout_margin="5dp">
<ImageView
    android:id="@+id/img_jing_pin_tui_jian"
    android:layout_width="wrap_content"
    android:layout_height="120dp"
    android:layout_gravity="center"/>

    <TextView
        android:id="@+id/text_jing_pin_name"
        style="@style/good_name_style_left_five"
        android:layout_width="wrap_content"
        android:singleLine="true"
        android:visibility="gone"/>

    <TextView
    android:id="@+id/text_jing_pin_shop_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/bottom_lable_color"/>

    <TextView
        android:id="@+id/text_jing_pin_market_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.00"
        android:layout_gravity="center"/>

</LinearLayout>