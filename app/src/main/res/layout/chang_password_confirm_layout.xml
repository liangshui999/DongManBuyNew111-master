<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_my">

    <!--头部-->
    <RelativeLayout
        style="@style/dao_hang_relative_layout_style">
        <ImageView
            android:id="@+id/img_dao_hang_confirm_change"
            style="@style/dao_hang_img_style"/>
        <TextView
            android:text="@string/confirm_change"
            style="@style/dao_hang_text_style"
            />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/mo_kuai_backgroud"/>


    <!--密码-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/edit_please_input_new_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/please_input_new_password"
                android:textSize="@dimen/confirm_change_font_size"
                android:password="true"
                android:singleLine="true"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/img_see_password_confirm_change"
            android:layout_width="@dimen/see_password_img_size"
            android:layout_height="@dimen/see_password_img_size"
            android:background="@drawable/see_password_normal"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_confirm_change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/confirm_change"
        android:textColor="@color/white_my"
        android:background="@drawable/red_backgroud_yuan_jiao_button"
        android:layout_margin="10dp"
        android:textSize="@dimen/confirm_change_font_size"/>




</LinearLayout>