<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/mo_kuai_backgroud">
            <!--第一个广告条和指示点-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white_my">
                <android.support.v4.view.ViewPager
                    android:id="@+id/viewpager_binner_first"
                    android:layout_width="match_parent"
                    android:layout_height="205dp"
                    android:visibility="visible">
                </android.support.v4.view.ViewPager>

                <LinearLayout
                    android:id="@+id/ll_point_group_first"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/viewpager_binner_first"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal">
                </LinearLayout>
            </RelativeLayout>

            <!--白色背景-->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/white_my"/>
            <!--我的钱包，我的订单8个图标-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:paddingBottom="20dp"
                android:visibility="visible">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!--我的钱包-->
                    <LinearLayout
                        android:id="@+id/ll_all_dong_man"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="@dimen/about_me_size"
                            android:layout_height="@dimen/about_me_size"
                            android:layout_gravity="center"
                            android:src="@mipmap/all_dong_man"/>
                        <TextView
                            style="@style/home_fragment_eight_text_style"
                            android:text="@string/all_dong_man"/>
                    </LinearLayout>

                    <!--我的订单-->
                    <LinearLayout
                        android:id="@+id/ll_tui_jian_zhu_ti"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="@dimen/about_me_size"
                            android:layout_height="@dimen/about_me_size"
                            android:layout_gravity="center"
                            android:src="@mipmap/tui_jian_zhu_ti"/>
                        <TextView
                            style="@style/home_fragment_eight_text_style"
                            android:text="@string/tui_jian_zhu_ti"/>
                    </LinearLayout>

                    <!--浏览记录-->
                    <LinearLayout
                        android:id="@+id/ll_you_hui_huo_dong"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="@dimen/about_me_size"
                            android:layout_height="@dimen/about_me_size"
                            android:layout_gravity="center"
                            android:src="@mipmap/you_hui_huo_dong"/>
                        <TextView
                            style="@style/home_fragment_eight_text_style"
                            android:text="@string/you_hui_huo_dong"/>
                    </LinearLayout>

                    <!--收货地址-->
                    <LinearLayout
                        android:id="@+id/ll_ship_tuan_gou"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="@dimen/about_me_size"
                            android:layout_height="@dimen/about_me_size"
                            android:layout_gravity="center"
                            android:src="@mipmap/tuan_gou"/>
                        <TextView
                            style="@style/home_fragment_eight_text_style"
                            android:text="@string/tuan_gou_huo_dong"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">
                    <!--限时特优-->
                    <LinearLayout
                        android:id="@+id/ll_my_guan_zhu"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="@dimen/about_me_size"
                            android:layout_height="@dimen/about_me_size"
                            android:layout_gravity="center"
                            android:src="@mipmap/my_guan_zhu"/>
                        <TextView
                            style="@style/home_fragment_eight_text_style"
                            android:text="@string/my_guan_zhu"/>
                    </LinearLayout>

                    <!--帮助中心-->
                    <LinearLayout
                        android:id="@+id/ll_my_order"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="@dimen/about_me_size"
                            android:layout_height="@dimen/about_me_size"
                            android:layout_gravity="center"
                            android:src="@mipmap/my_order"/>
                        <TextView
                            style="@style/home_fragment_eight_text_style"
                            android:text="@string/my_order"/>
                    </LinearLayout>

                    <!--品牌页面-->
                    <LinearLayout
                        android:id="@+id/ll_ji_fen_dui_huan"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="@dimen/about_me_size"
                            android:layout_height="@dimen/about_me_size"
                            android:layout_gravity="center"
                            android:src="@mipmap/ji_fen_dui_huan"/>
                        <TextView
                            style="@style/home_fragment_eight_text_style"
                            android:text="@string/ji_fen_dui_huan"/>
                    </LinearLayout>

                    <!--优惠活动-->
                    <LinearLayout
                        android:id="@+id/ll_help_center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="@dimen/about_me_size"
                            android:layout_height="@dimen/about_me_size"
                            android:layout_gravity="center"
                            android:src="@mipmap/help_center"/>
                        <TextView
                            style="@style/home_fragment_eight_text_style"
                            android:text="@string/help_center"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!--限时秒杀-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="1dp"
                android:background="@android:color/white"
                android:padding="10dp">
                <LinearLayout
                    android:id="@+id/xian_shi_biao_ti"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:layout_centerVertical="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/xian_shi"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/bottom_lable_color"
                        />
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@mipmap/miao_sha"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/miao_sha"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/bottom_lable_color"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/xian_shi_biao_ti"
                    >
                    <TextView
                        android:id="@+id/text_hour_xian_shi_miao_sha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/white_my"
                        android:padding="2dp"
                        android:background="@drawable/xian_shi_miao_sha_background"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:paddingLeft="5dp"
                        android:paddingRight="2dp"/>
                    <TextView
                        android:id="@+id/text_minute_xian_shi_miao_sha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/white_my"
                        android:padding="2dp"
                        android:background="@drawable/xian_shi_miao_sha_background"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:paddingLeft="5dp"
                        android:paddingRight="2dp"/>
                    <TextView
                        android:id="@+id/text_second_xian_shi_miao_sha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/white_my"
                        android:padding="2dp"
                        android:background="@drawable/xian_shi_miao_sha_background"
                        />
                </LinearLayout>


                <ImageView
                    android:id="@+id/xianshi"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/right"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/text_xian_shi_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/xianshi"
                    android:text="@string/more"
                    android:clickable="true"/>
            </RelativeLayout>

            <!--限时秒杀的列表展示-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_my"
                android:visibility="visible"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/img_xian_shi_miao_sha_content"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:layout_marginLeft="5dp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_weight="1">
                    <com.example.asus_cp.dongmanbuy.customview.MyGridView
                        android:id="@+id/grid_view_xian_shi_miao_sha"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:numColumns="2"
                        android:gravity="center"
                        >
                    </com.example.asus_cp.dongmanbuy.customview.MyGridView>
                </LinearLayout>
            </LinearLayout>


            <!--第二个广告条和指示点-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white_my"
                android:layout_marginTop="10dp">
                <android.support.v4.view.ViewPager
                    android:id="@+id/viewpager_binner_second"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:visibility="visible">
                </android.support.v4.view.ViewPager>

                <LinearLayout
                    android:id="@+id/ll_point_group_second"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/viewpager_binner_second"
                    android:layout_above="@id/viewpager_binner_second"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">
                </LinearLayout>
            </RelativeLayout>


            <!--精品推荐-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="1dp"
                android:padding="10dp"
                android:background="@android:color/white">
                <TextView
                    android:id="@+id/jing_ping_tui_jian_biao_ti"
                    android:text="@string/jing_pin_tui_jian"
                    style="@style/jing_ping_and_dian_pu_biao_ti_style"
                    />
                <TextView
                    android:layout_toRightOf="@id/jing_ping_tui_jian_biao_ti"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/jing_ping_tui_jian_content"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    />

                <ImageView
                    android:id="@+id/jingping"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:src="@mipmap/right"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/text_jing_pin_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/jingping"
                    android:clickable="true"
                    android:text="@string/more"
                    />
            </RelativeLayout>

            <!--精品推荐的列表展示-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white_my"
                >
                <android.support.v4.view.ViewPager
                    android:id="@+id/viewpager_jing_pin"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp">
                </android.support.v4.view.ViewPager>

                <LinearLayout
                    android:id="@+id/ll_point_group_jing_pin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/viewpager_jing_pin"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:paddingBottom="10dp">
                </LinearLayout>
            </RelativeLayout>

            <com.example.asus_cp.dongmanbuy.customview.MyGridView
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:id="@+id/grid_view_jing_pin_tui_jian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnWidth="100dp"
                android:numColumns="auto_fit"
                android:verticalSpacing="@dimen/grid_view_space"
                android:horizontalSpacing="@dimen/grid_view_space"
                android:stretchMode="columnWidth"
                android:gravity="center"
                >
            </com.example.asus_cp.dongmanbuy.customview.MyGridView>

            <!--第三个广告条-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:background="@color/white_my">
                <android.support.v4.view.ViewPager
                    android:id="@+id/viewpager_binner_three"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp">
                </android.support.v4.view.ViewPager>

                <LinearLayout
                    android:id="@+id/ll_point_group_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/viewpager_binner_three"
                    android:layout_above="@id/viewpager_binner_three"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">
                </LinearLayout>
            </RelativeLayout>

            <!--店铺街的标题，更多-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@android:color/white"
                android:paddingLeft="10dp"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:id="@+id/dian_pu_jie_biao_ti"
                    android:text="@string/shop_street"
                    style="@style/jing_ping_and_dian_pu_biao_ti_style"/>
                <TextView
                    android:layout_toRightOf="@id/dian_pu_jie_biao_ti"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/shop_street_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"/>

                <ImageView
                    android:id="@+id/dianpu"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/right"
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/text_dian_pu_jie_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10dp"
                    android:clickable="true"
                    android:text="@string/more"
                    android:layout_toLeftOf="@id/dianpu"/>

            </RelativeLayout>

            <!--店铺街的内容-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white_my"
                android:paddingBottom="10dp">
                <android.support.v4.view.ViewPager
                    android:id="@+id/viewpager_shop_street"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">
                </android.support.v4.view.ViewPager>

                <LinearLayout
                    android:id="@+id/ll_point_group_shop_street"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/viewpager_shop_street"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal">
                </LinearLayout>
            </RelativeLayout>

            <!--猜你喜欢的标题-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/mo_kuai_backgroud">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/cai_ni_xi_huan"
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"/>
            </RelativeLayout>

            <!--猜你喜欢的内容-->
            <com.example.asus_cp.dongmanbuy.customview.MyGridViewA
                android:id="@+id/grid_view_cai_ni_xi_huan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="2"
                android:horizontalSpacing="@dimen/grid_view_space"
                android:verticalSpacing="@dimen/grid_view_space"
                android:gravity="center"
                android:background="@color/mo_kuai_backgroud"
                android:paddingBottom="10dp"
                android:paddingLeft="@dimen/grid_view_space"
                android:paddingRight="@dimen/grid_view_space"
                >
            </com.example.asus_cp.dongmanbuy.customview.MyGridViewA>

            <!--版权所有部分的内容-->
            <!--<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ban_quan"
                    android:textSize="18sp"
                    android:layout_margin="20dp"/>
            </LinearLayout>-->
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="测试"/>

        </LinearLayout>
    </ScrollView>


</LinearLayout>