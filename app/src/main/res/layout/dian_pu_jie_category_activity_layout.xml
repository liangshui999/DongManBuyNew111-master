<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--广告栏-->
            <ImageView
                android:id="@+id/img_dian_pu_jie_category_binner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/ic_launcher"/>

            <!--分类栏-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none"
                        android:layout_gravity="center_vertical">
                        <LinearLayout
                            android:id="@+id/ll_dian_pu_jie_categories"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/text_shu_ji"
                                android:clickable="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/shu_ji"
                                android:padding="10dp"/>
                            <TextView
                                android:id="@+id/text_mo_wan"
                                android:clickable="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/mo_wan"
                                android:padding="10dp"/>
                            <TextView
                                android:id="@+id/text_diy_ding_zhi"
                                android:clickable="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/diy"
                                android:padding="10dp"/>
                            <TextView
                                android:id="@+id/text_shang_zhuang"
                                android:clickable="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/shang_zhuang"
                                android:padding="10dp"/>
                            <TextView
                                android:id="@+id/text_xia_zhuang"
                                android:clickable="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/xia_zhuang"
                                android:padding="10dp"/>
                            <TextView
                                android:id="@+id/text_xiang_bao"
                                android:clickable="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/xiang_bao"
                                android:padding="10dp"/>
                            <TextView
                                android:id="@+id/text_zhai_pin"
                                android:clickable="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/zai_pin"
                                android:padding="10dp"/>
                            <TextView
                                android:id="@+id/text_mao_rong"
                                android:clickable="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/mao_rong"
                                android:padding="10dp"/>
                            <TextView
                                android:id="@+id/text_pei_shi"
                                android:clickable="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/pei_shi"
                                android:padding="10dp"/>
                        </LinearLayout>
                    </HorizontalScrollView>
                </LinearLayout>

                <ImageView
                    android:id="@+id/img_category_down"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@mipmap/down"
                    android:layout_margin="10dp"/>
            </LinearLayout>

            <!--初始状态下隐藏的分类-->
            <LinearLayout
                android:id="@+id/ll_category_gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/gray">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:id="@+id/text_shu_ji_gone"
                        android:clickable="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/shu_ji"
                        android:layout_margin="5dp"
                        android:textSize="@dimen/dian_pu_jie_category_base_item"
                        android:background="@color/white_my"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"/>

                    <TextView
                        android:id="@+id/text_mo_wan_gone"
                        android:clickable="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mo_wan"
                        android:layout_margin="5dp"
                        android:textSize="@dimen/dian_pu_jie_category_base_item"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:background="@color/white_my"/>
                    <TextView
                        android:id="@+id/text_diy_ding_zhi_gone"
                        android:clickable="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/diy"
                        android:layout_margin="5dp"
                        android:textSize="@dimen/dian_pu_jie_category_base_item"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:background="@color/white_my"/>
                    <TextView
                        android:id="@+id/text_shang_zhuang_gone"
                        android:clickable="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/shang_zhuang"
                        android:layout_margin="5dp"
                        android:textSize="@dimen/dian_pu_jie_category_base_item"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:background="@color/white_my"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/text_xia_zhuang_gone"
                        android:clickable="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/shang_zhuang"
                        android:layout_margin="5dp"
                        android:textSize="@dimen/dian_pu_jie_category_base_item"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:background="@color/white_my"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>



</LinearLayout>