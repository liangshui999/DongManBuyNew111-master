<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp">

    <!--邮箱-->
    <EditText
        android:id="@+id/edit_email_num_find_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/input_email_number"
        android:textSize="@dimen/find_password_font_size"
        android:layout_marginTop="10dp"/>


    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/find_password_by_email_tips"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/btn_next_step_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/next_step"
        android:textSize="@dimen/find_password_font_size"
        android:textColor="@color/white_my"
        android:background="@color/bottom_lable_color"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/text_also_find_by_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/find_password_font_size"
        android:text="@string/alse_find_by_phone"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        />
</LinearLayout>