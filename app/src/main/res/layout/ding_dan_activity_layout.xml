<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <!--收货地址-->
            <RelativeLayout
                android:id="@+id/re_layout_shou_huo_address_ding_dan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:background="@color/white_my">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp">
                        <TextView
                            android:id="@+id/text_shou_huo_ren_name_ding_dan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="朱熹"
                            android:textSize="16sp"/>
                        <TextView
                            android:id="@+id/text_shou_huo_ren_phone_ding_dan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1882586954"
                            android:textSize="16sp"
                            android:layout_marginLeft="10dp"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/text_shou_huo_address_ding_dan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="湖北 武汉 汉阳区 汉口北 海宁皮革城"
                        android:textSize="@dimen/ding_dan_layout_base_font"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@mipmap/right"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"/>

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="周末自营"
                android:paddingLeft="10dp"
                android:layout_marginTop="5dp"
                android:background="@color/white_my"
                android:textSize="16sp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"/>



            <!--展示几件购买的衣服区-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@color/white_my"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/img_one_ding_dan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/sina"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/img_two_ding_dan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/sina"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/img_three_ding_dan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/sina"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_dispaly_all_product_ding_dan"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_product_sum_ding_dan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:text="共6件" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@mipmap/right" />
                </LinearLayout>
            </LinearLayout>


           <!-- 配送方式-->
            <RelativeLayout
                android:id="@+id/re_layout_pei_song_fang_shi_ding_dan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@color/white_my"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pei_song_fang_shi"
                    android:textSize="@dimen/ding_dan_layout_base_font"/>
                <ImageView
                    android:id="@+id/pei_song_right"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@mipmap/right"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"/>
                <TextView
                    android:id="@+id/text_pei_song_fang_shi_ding_dan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="门店自提"
                    android:layout_toLeftOf="@id/pei_song_right"
                    android:textSize="@dimen/ding_dan_layout_base_font"/>

            </RelativeLayout>


           <!-- 时间-->

            <RelativeLayout
                android:id="@+id/re_layout_zi_ti_shi_jian_ding_dan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@color/white_my"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/time"
                    android:textSize="@dimen/ding_dan_layout_base_font"/>
                <ImageView
                    android:id="@+id/time_right"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@mipmap/right"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"/>
                <TextView
                    android:id="@+id/text_zi_ti_time_xing_qi_ding_dan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="周四"
                    android:layout_toLeftOf="@id/time_right"
                    android:textSize="@dimen/ding_dan_layout_base_font"/>
                <TextView
                    android:id="@+id/text_zi_ti_time_ri_qi_ding_dan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="06月16日"
                    android:textSize="@dimen/ding_dan_layout_base_font"
                    android:layout_toLeftOf="@id/text_zi_ti_time_xing_qi_ding_dan"
                    android:layout_marginRight="10dp"/>

            </RelativeLayout>


            <!--自提点-->
            <RelativeLayout
                android:id="@+id/re_layout_zi_ti_area_ding_dan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@color/white_my"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zi_ti_dian"
                    android:textSize="@dimen/ding_dan_layout_base_font"/>
                <ImageView
                    android:id="@+id/zi_ti_right"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@mipmap/right"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"/>
                <TextView
                    android:id="@+id/text_zi_ti_area_ding_dan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="汉阳区万事屋"
                    android:layout_toLeftOf="@id/zi_ti_right"
                    android:textSize="@dimen/ding_dan_layout_base_font"/>
            </RelativeLayout>

            <!--买家留言-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:background="@color/white_my"
                android:orientation="vertical"
                android:focusable="true"
                android:focusableInTouchMode="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mai_jia_liu_yan"
                    android:textSize="@dimen/ding_dan_layout_base_font"/>
                <EditText
                    android:id="@+id/edit_mai_jia_liu_yan_ding_dan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:hint="选填"

                    />
            </LinearLayout>


            <!--共几件商品，合计-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="2dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="10dp"
                android:background="@color/white_my">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="共"
                        android:textSize="@dimen/ding_dan_layout_base_font"/>
                    <TextView
                        android:id="@+id/text_product_sum_he_ji_ding_dan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6"
                        android:textSize="@dimen/ding_dan_layout_base_font"
                        android:paddingRight="5dp"
                        android:paddingLeft="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="件商品，"
                        android:textSize="@dimen/ding_dan_layout_base_font"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="合计："
                        android:textSize="@dimen/ding_dan_layout_base_font"/>

                    <TextView
                        android:id="@+id/text_he_ji_price_ding_dan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20171.00"
                        android:textColor="@color/bottom_lable_color"
                        android:textSize="@dimen/ding_dan_layout_base_font"/>

                </LinearLayout>
            </LinearLayout>


            <!--支付方式-->
            <RelativeLayout
                android:id="@+id/re_layout_zhi_fu_fang_shi_ding_dan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@color/white_my"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zhi_fu_fang_shi"
                    android:textSize="@dimen/ding_dan_layout_base_font"/>
                <ImageView
                    android:id="@+id/time_right_ding_dan"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@mipmap/right"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"/>
                <TextView
                    android:id="@+id/text_shou_xu_fei_ding_dan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:textColor="@color/bottom_lable_color"
                    android:layout_toLeftOf="@id/time_right_ding_dan"
                    android:textSize="@dimen/ding_dan_layout_base_font"/>
                <TextView
                    android:id="@+id/text_zhi_fu_fang_shi_ding_dan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支付宝（手续费）"
                    android:textSize="@dimen/ding_dan_layout_base_font"
                    android:layout_toLeftOf="@id/text_shou_xu_fei_ding_dan"
                    android:layout_marginRight="10dp"/>

            </RelativeLayout>



            <!--发票信息-->
            <RelativeLayout
                android:id="@+id/re_layout_fa_piao_xin_xi_ding_dan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@color/white_my"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fa_piao_xin_xi"
                    android:textSize="@dimen/ding_dan_layout_base_font"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:id="@+id/fa_piao_right"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@mipmap/right"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个人\n明细"
                    android:layout_toLeftOf="@id/fa_piao_right"
                    android:textSize="@dimen/ding_dan_layout_base_font"/>
            </RelativeLayout>



            <!--优惠券-->
            <RelativeLayout
                android:id="@+id/re_layout_you_hui_quan_ding_dan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@color/white_my"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/you_hui_quan"
                    android:textSize="@dimen/ding_dan_layout_base_font"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:id="@+id/you_hui_quan_right"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@mipmap/right"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/text_you_hui_quan_ding_dan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="不使用优惠券"
                    android:layout_toLeftOf="@id/you_hui_quan_right"
                    android:textSize="@dimen/ding_dan_layout_base_font"/>
            </RelativeLayout>



            <!--本单可使用积分抵扣-->
            <RelativeLayout
                android:id="@+id/re_layout_ji_fen_ding_dan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@color/white_my"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp">

                <TextView
                    android:id="@+id/ji_fen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/shi_yong_ji_fen"
                    android:textSize="@dimen/ding_dan_layout_base_font"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/text_ji_fen_ding_dan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200.00"
                    android:layout_toRightOf="@id/ji_fen"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/bottom_lable_color"
                    android:textSize="@dimen/ding_dan_layout_base_font"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:id="@+id/img_ji_fen_ding_dan"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@mipmap/right"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>



            <!--商品总价-->
            <RelativeLayout
                android:id="@+id/re_layout_product_sum_price_ding_dan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@color/white_my"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/product_sum_price"
                    android:textSize="@dimen/ding_dan_layout_base_font"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/text_product_sum_price_ding_dan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2017.00"
                    android:textColor="@color/bottom_lable_color"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>


        </LinearLayout>
    </ScrollView>


    <!--固定栏-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:background="@color/white_my">
        <TextView
            android:id="@+id/shi_fu_kuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/shi_fu_kuan"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/text_shi_fu_kuan_ding_dan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018.20"
            android:layout_toRightOf="@id/shi_fu_kuan"
            android:textColor="@color/bottom_lable_color"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"/>
        <Button
            android:id="@+id/btn_ti_jiao_ding_dan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/bottom_lable_color"
            android:textColor="@color/white_my"
            android:text="@string/ti_jiao_ding_dan"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>



</RelativeLayout>