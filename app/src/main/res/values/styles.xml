<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/bottom_lable_color</item>
        <item name="colorPrimaryDark">@color/bottom_lable_color</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--自定义的checkbox样式,此样式作废-->
    <style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/mycheckbox</item>
    </style>


    <!--自定义的全局样式，继承自appcompat-->
    <style name="MyAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/bottom_lable_color</item>
        <item name="colorPrimaryDark">@color/bottom_lable_color</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- 自定义loading dialog -->
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@mipmap/dialogbc</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <!--导航栏relativelayout的样式-->
    <style name="dao_hang_relative_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/bottom_lable_color</item>
        <item name="android:paddingTop">@dimen/head_padding</item>
        <item name="android:paddingBottom">@dimen/head_padding</item>
    </style>

    <!--导航栏文字的样式-->
    <style name="dao_hang_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">@dimen/dao_hang_base_font</item>
        <item name="android:textColor">@color/white_my</item>
    </style>


    <!--导航栏返回键的样式-->
    <style name="dao_hang_img_style">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@mipmap/leftdaohang</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>


    <!--mainActivity底部标签linearlayout的样式-->
    <style name="main_activity_bottom_label_ll_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>


    <!--mainActivity底部标签imageview的样式-->
    <style name="main_activity_bottom_label_img_style">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
    </style>


    <!--mainActivity底部标签textview的样式-->
    <style name="main_activity_bottom_label_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/main_page_bottom_biao_qian_size</item>
    </style>


    <!--homefragment八个按钮文字的样式-->
    <style name="home_fragment_eight_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">@dimen/fragment_eight_font_size</item>
        <item name="android:textColor">@color/myblack</item>
    </style>


    <!--精品推荐和店铺街标题的样式-->
    <style name="jing_ping_and_dian_pu_biao_ti_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/myblack</item>
        <item name="android:layout_centerVertical">true</item>
    </style>


    <!--商品详情里面运费地区等的样式-->
    <style name="product_detail_font_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/product_detail_base_font_size</item>
        <item name="android:textColor">@color/myblack</item>
        <item name="android:textStyle">normal</item>
    </style>


    <!--弹出关闭按钮的样式-->
    <style name="tan_chu_close">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:src">@mipmap/close</item>
    </style>


    <!--搜索栏的布局的样式-->
    <style name="search_ll_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:background">@color/bottom_lable_color</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <!--搜索栏imageview的样式-->
    <style name="search_img_dao_hang_style">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:background">@mipmap/leftdaohang</item>
    </style>

    <!--搜索栏搜索框的样式-->
    <style name="search_img_search_kuang_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:src">@mipmap/search_pic</item>
    </style>

    <!--搜索结果综合排序的文字的样式-->
    <style name="search_result_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/search_result_text_size</item>
    </style>

    <!--搜索结果综合排序的图片的样式-->
    <style name="search_result_img_style">
        <item name="android:layout_width">@dimen/search_result_icon_size</item>
        <item name="android:layout_height">@dimen/search_result_icon_size</item>
        <item name="android:src">@mipmap/down_black_sort</item>

    </style>

</resources>
